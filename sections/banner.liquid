{% comment %} {{ 'component-image-with-text.css' | asset_url | stylesheet_tag }} {% endcomment %}
{{ 'banner.css' | asset_url | stylesheet_tag }}

<style></style>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width">
  <section class="banner">
    <div class="ellipse">
      {% render 'ellipse' %}
    </div>
    <div class="blur-right">
      {% render 'blur-right' %}
    </div>
    <div class="blur-left">
      {% render 'blur-left' %}
    </div>
    <div class="banner-container">
      <div class="banner-header">
        <h1>Open Your World To Kayani</h1>
      </div>

      <div class="image-container">
        <div class="image-left">
          <img
            src="{{  "banner-image-01.png" | asset_url }}"
            alt="girl in dress"
            loading="lazy"
          >
        </div>
        <div class="image-right">
          <img
            src="{{"banner-image-02.png" | asset_url}}"
            alt="girlindress"
            loading="lazy"
          >
        </div>
      </div>

      <div class="text-container">
        <p class="banner-text ">Let's make your summer travel story an unforgettable one</p>
        <div class="banner-button">
          <button>
            {% render 'icon-upright' %}
          </button>
          <p>Shop Now</p>
        </div>
      </div>
    </div>
  </section>
</div>

