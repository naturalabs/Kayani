<div class="featured-product-slider">
  <div class="slider-wrapper">
    {% for product in collections.featured.products %}
      <div class="slide">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image.src }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="slider-controls">
    <button class="prev-button">Previous</button>
    <button class="next-button">Next</button>
  </div>
</div>

<script>
  // Get slider elements
  const sliderWrapper = document.querySelector('.slider-wrapper');
  const prevButton = document.querySelector('.prev-button');
  const nextButton = document.querySelector('.next-button');

  // Set initial position
  let position = 0;

  // Set slide width
  const slideWidth = 300; // Adjust the value according to your design

  // Get total number of slides
  const totalSlides = document.querySelectorAll('.slide').length;

  // Adjust slider wrapper width based on the number of slides
  sliderWrapper.style.width = `${slideWidth * totalSlides}px`;

  // Slide to the previous position
  prevButton.addEventListener('click', () => {
    if (position > 0) {
      position--;
      sliderWrapper.style.transform = `translateX(-${slideWidth * position}px)`;
    }
  });

  // Slide to the next position
  nextButton.addEventListener('click', () => {
    if (position < totalSlides - 1) {
      position++;
      sliderWrapper.style.transform = `translateX(-${slideWidth * position}px)`;
    }
  });
</script>

<style>
  .featured-product-slider {
    /* Add any styles for the slider container */
  }

  .slider-wrapper {
    display: flex;
    overflow: hidden;
    /* Add any styles for the slider wrapper */
  }

  .slide {
    flex: 0 0 auto;
    width: 300px; /* Adjust the value according to your design */
    margin-right: 20px;
    /* Add any styles for individual slides */
  }

  .slider-controls {
    margin-top: 10px;
    /* Add any styles for the slider controls */
  }
</style>
