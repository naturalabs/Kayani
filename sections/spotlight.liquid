<section class="fashion">
  <div class="fashion-blur-right">
    {% render 'blur-right' %}
  </div>
  <div class="fashion-mobile">
    <h2>Fashion That Is Always Relevant</h2>
    <div class="carousel" data-carousel>
      <button class="carousel-button prev" data-carousel-button="prev">
        {% render 'icon-left' %}
      </button>
      <button class="carousel-button next" data-carousel-button="next">
        {% render 'icon-right' %}
      </button>
      <ul data-slides>
        <li class="slide">
          <img src="{{ 'fashion-01.png' | asset_url }}" alt="Nature Image #1">
        </li>
      </ul>
    </div>
    <div class="button-wrapper ">
      <button>
        {% render 'icon-upright' %}
      </button>
      <p>Shop Now</p>
    </div>
  </div>
  <div class="fashion-desktop">
    <div class="fashion-image-container">
      <img src="{{ 'fashion-01.png' | asset_url }}" alt="">
    </div>

    <div class="fashion-text-container">
      <div class="text-button">
        <h2>Fashion That Is Always Relevant</h2>
        <div class="button-wrapper">
          <button>
            {% render 'icon-upright' %}
          </button>
          <p>Shop Now</p>
        </div>
      </div>

      <div class="fashion-gallery">
        <div class="image-left">
          <img src="{{ 'fashion-02.png' | asset_url }}" alt="">
        </div>
        <div class="image-right">
          <img src="{{ 'fashion-03.png' | asset_url }}" alt="">
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  section.fashion {
    max-width: 374px;
    margin-inline: auto;
  }
  .fashion h2 {
    font-size: 36px;
    line-height: 44px;
    max-width: 371px;
    margin-bottom: 13px;
    text-align: center;
  }

  .fashion-image-wrapper {
    margin-inline: auto;
  }

  .fashion .carousel {
    width: min(90%, 374px);
    position: relative;
    min-height: 421px;
    margin-inline: auto;
    margin-bottom: 50px;
  }
  .fashion .button-wrapper {
    color: #646464;
    font-size: 17px;
    text-align: center;
  }
  .fashion .button-wrapper button {
    border-radius: 0;
    background-color: transparent;
    outline: none;
    border: 1px solid #646464;
    color: #646464;
  }
  .fashion-text-container .text-button h2 {
    font-family: var(--ff-secondary);
  }
  .carousel > ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .slide {
    position: absolute;
    inset: 0;
    /* opacity: 0; */
    /* transition: 200ms opacity ease-in-out; */
    /* transition-delay: 200ms; */
  }

  .slide > img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .carousel-button {
    position: absolute;
    z-index: 2;
    background: none;
    border: none;
    /* font-size: 4rem; */
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    border-radius: 0;
    /* padding: 0 0.5rem; */
    background-color: var(--clr-primary-white);
    opacity: 0.5;
    height: 65px;
    width: 65px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .carousel-button svg {
    height: 36px;
    width: 36px;
    color: #646464;
  }

  .carousel-button:hover,
  .carousel-button:focus {
    color: white;
    background-color: rgba(0, 0, 0, 0.2);
  }

  .carousel-button:focus {
    outline: 1px solid black;
  }

  .carousel-button.prev {
    left: 0;
  }

  .carousel-button.next {
    right: 0;
  }
  .fashion-desktop,
  .fashion-blur-right {
    display: none;
  }
  @media (min-width: 800px) {
    .fashion {
      position: relative;
    }
    section.fashion {
      max-width: 1438px;
      margin-inline: auto;
    }
    .fashion-desktop {
      display: flex;
      gap: 43px;
    }
    .fashion .fashion-mobile {
      display: none;
    }
    .fashion.desktop {
      /* display: flex; */
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-gap: 43px;
    }
    .fashion-image-container {
      /* min-width: 672px; */
    }
    .fashion-image-container img {
      width: 100%;
    }
    .fashion-image-container img:nth-child(1) {
      margin-right: 42px;
    }
    .fashion-gallery {
      display: flex;
      justify-content: flex-end;
      gap: 40px;
    }
    .fashion-gallery img {
      width: min(100%, 352px);
    }
    .fashion-text-container {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .fashion-text-container .text-button {
      display: flex;
      padding-top: 20px;
    }
    .fashion-text-container .text-button h2 {
      font-size: 71px;
      letter-spacing: -2%;
      text-align: left;
      min-width: 500px;
      line-height: 72px;
    }

    .fashion-text-container .text-button button {
      width: 100px;
      height: 100px;
      margin-bottom: 10px;
      margin-top: 60px;
      margin-left: 20px;
    }
    .fashion .button-wrapper button p {
      font-size: 24px;
    }
    .fashion-blur-right {
      display: block;
      position: absolute;
      right: -230px;
      bottom: -200px;
      opacity: 60%;
    }
  }
{% endstyle %}
