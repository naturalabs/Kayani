{{ 'base.css' | asset_url | stylesheet_tag }}
{{ 'collection.css' | asset_url | stylesheet_tag }}

<section class="hot-pick full-width">
  <div class="hot-pick__blur-right">
    {% render 'blur-right' %}
  </div>
  <div
    class="
      hot-pick__container {% if section.settings.page_width == 'full-width' %}full-width
      {% elsif section.settings.page_width == 'fixed-width' %}fixed-width
      {% elsif section.settings.page_width == 'custom-width' %}custom-width
      {% endif %}
    "
  >
    <div class="card-container">
      <div class="card">
        <div class="card__image">
          {%- if section.settings.bestseller != blank -%}
            {{ section.settings.bestseller | image_url: width: 440 | image_tag }}
          {%- else -%}
            <img
              src="{{ 'hot-01.png' | asset_url }}"
              width="440"
              height="auto"
              alt="example"
              loading="lazy"
            >
          {%- endif -%}
        </div>
        <div class="card__elements">
          <h2>Best Sellers</h2>
          <a href="{{ section.settings.bestsellers_link }}"><button>Shop Bestseller</button></a>
        </div>
      </div>
      <div class="card">
        <div class="card__image">
          {%- if section.settings.new_arrivals != blank -%}
            {{ section.settings.new_arrivals | image_url: width: 440 | image_tag }}
          {%- else -%}
            <img
              src="{{ 'hot-02.png' | asset_url }}"
              width="440"
              height="auto"
              alt="example"
              loading="lazy"
            >
          {%- endif -%}
        </div>
        <div class="card__elements ">
          <h2>New Arrivals</h2>
          <a href="{{ section.settings.new_arrivals_link }}"><button>Shop Arrivals</button></a>
        </div>
      </div>
      <div class="card">
        <div class="card__image">
          {%- if section.settings.dress_collection != blank -%}
            {{ section.settings.dress_collection | image_url: width: 440 | image_tag }}
          {%- else -%}
            <img
              src="{{ 'hot-03.png' | asset_url }}"
              width="440"
              height="auto"
              alt="example"
              loading="lazy"
            >
          {%- endif -%}
        </div>
        <div class="card__elements ">
          <h2>Dress Collection</h2>
          <a href="{{ section.settings.dress_collection_link }}"><button>Shop Dress</button></a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "image_picker",
      "label": "Best Seller Image",
      "id": "bestseller"
    },

    {
      "type": "url",
      "label": "Bestsellers Button Link",
      "id": "bestsellers_link"
    },
    {
      "type": "image_picker",
      "label": "New Arrival Image",
      "id": "new_arrivals"
    },

    {
      "type": "url",
      "label": "New Arrivals Button Link",
      "id": "new_arrivals_link"
    },
    {
      "type": "image_picker",
      "label": "Dress Collection Image",
      "id": "dress_collection"
    },

    {
      "type": "url",
      "label": "Dress Collection Button Link",
      "id": "dress_collection_link"
    },
    {
      "type": "select",
      "label": "Page Width",
      "id": "page_width",
      "options": [
        {
          "value": "full-width",
          "label": "Full Width"
        },
        {
          "value": "fixed-width",
          "label": "Fixed Width"
        },
        {
          "value": "custom-width",
          "label": "Custom Width"
        }
      ],
      "default": "fixed-width"
    }
  ]
}
{% endschema %}
